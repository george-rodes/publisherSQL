<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    tools:context=".telas.AssistenciaFragment"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:layout_margin="@dimen/rvMarginTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="2dp"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/anoDeServioLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ano_de_servico"
                android:textColor="@color/dark_color"
                android:textSize="25sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftAssistencia"
                android:layout_marginStart="@dimen/marginLeftAssistencia">

                <TextView
                    android:id="@+id/weekendLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/reuniao_fim_de_semana"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/weekendAno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/_108"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/marginLeftAssistencia"
                android:layout_marginStart="@dimen/marginLeftAssistencia">

                <TextView
                    android:id="@+id/midweekLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="@string/reuniao_durante_a_semana"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/midweekAno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:text="@string/_108"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAssistencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:dividerHeight="2dp" />

</LinearLayout>