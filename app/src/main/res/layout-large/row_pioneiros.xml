<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/buttons">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_portrait_black_48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/nome_do_publicador"
            android:textColor="@color/dark_color"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/meses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/meses"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/horas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/pio_total_horas"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mediahoras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_horas"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mediarevisitas"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/media_revisitas"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/mediaestudos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/media_estudos"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>